<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/inst"
    android:layout_height="match_parent"
    tools:context=".condition_admin">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:background="#839C27B0"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FC00000C"
        android:background="#9C27B0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUIDELINES" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:background="#31FFEBEE"
        android:gravity="center"
        android:text="This quiz contains multiple choice questions and answers of different subjects.You have to choose a subject of your interest and then you would be able to give test.Each question contains one marks for correct answer and there is no negative mark for wrong answer."
        android:textColor="#FC00000C"
        android:textSize="19dp" />
</LinearLayout>